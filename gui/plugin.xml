      <command
            categoryId="org.eclipse.ui.category.edit"
            description="%command.moveUp.description"
            id="org.daisy.pipeline.gui.command.moveUp"
            name="%command.moveUp"/>
      <command
            categoryId="org.eclipse.ui.category.file"
            description="%command.newItem.description"
            id="org.daisy.pipeline.gui.command.newItem"
            name="%command.newItem"/>
      <command
            categoryId="org.daisy.pipeline.gui.command.category.run"
            description="%command.run.description"
