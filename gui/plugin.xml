<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin
>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.daisy.pipeline.gui.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.daisy.pipeline.gui.application"
            description="%product.description"
            name="DAISY Pipeline">      <property
            name="introTitle"
            value="%intro.title"/>
      <property
            name="introBrandingImage"
            value="product:pipeline.png"/>
      <property
            name="introBrandingImageText"
            value="%intro.brandingImageText"/>
      <property
            name="aboutImage"
            value="branding/about.gif"/>
      <property
            name="aboutText"
            value="%product.about"/>
      <property
            name="windowImages"
            value="branding/pipeline-logo-16x16.gif,branding/pipeline-logo-32x32.gif,branding/pipeline-logo-48x48.gif,branding/pipeline-logo-64x64.gif,branding/pipeline-logo-128x128.gif"/>
      <property
            name="startupForegroundColor"
            value="000000"/>
      <property
            name="startupMessageRect"
            value="320,235,135,20"/>
      <property
            name="startupProgressRect"
            value="0,255,455,20"/>
      <property
            name="appName"
            value="DAISY Pipeline">
      </property>
      <property
            name="preferenceCustomization"
            value="plugin_customization.ini">
      </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.daisy.pipeline.gui.PreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="%actionSet.tableEdition.description"
            id="org.daisy.pipeline.gui.actionSet.tableEdition"
            label="%actionSet.tableEdition"
            visible="true">
         <action
               allowLabelUpdate="true"
               definitionId=" org.daisy.pipeline.gui.command.moveToBottom"
               icon="icons/move-bottom.gif"
               id="org.daisy.pipeline.gui.action.table.moveToBottom"
               label="%action.moveToBottom"
               menubarPath="edit/additions"
               retarget="true"
               style="push"
               tooltip="%action.moveToBottom.tooltip"/>
         <action
               allowLabelUpdate="true"
               definitionId=" org.daisy.pipeline.gui.command.moveDown"
               icon="icons/move-down.gif"
               id="org.daisy.pipeline.gui.action.table.moveDown"
               label="%action.moveDown"
               menubarPath="edit/additions"
               retarget="true"
               style="push"
               tooltip="%action.moveDown.tooltip"/>
         <action
               allowLabelUpdate="true"
               definitionId=" org.daisy.pipeline.gui.command.moveUp"
               icon="icons/move-up.gif"
               id="org.daisy.pipeline.gui.action.table.moveUp"
               label="%action.moveUp"
               menubarPath="edit/additions"
               retarget="true"
               style="push"
               tooltip="%action.moveUp.tooltip"/>
         <action
               allowLabelUpdate="true"
               definitionId=" org.daisy.pipeline.gui.command.moveToTop"
               icon="icons/move-top.gif"
               id="org.daisy.pipeline.gui.action.table.moveToTop"
               label="%action.moveToTop"
               menubarPath="edit/additions"
               retarget="true"
               style="push"
               tooltip="%action.moveToTop.tooltip"/>
      </actionSet>
      <actionSet
            description="%actionSet.jobs.description"
            id="org.daisy.pipeline.gui.actionSet.jobs"
            label="%actionSet.jobs"
            visible="true">
         <menu
               id="org.daisy.pipeline.gui.menu.run"
               label="%menu.run"
               path="additions">
            <groupMarker name="run"/>
            <separator name="additions"/>
         </menu>
         <action
               class="org.daisy.pipeline.gui.jobs.CancelAllAction"
               definitionId="org.daisy.pipeline.gui.command.cancelAll"
               icon="icons/action-stop-all.gif"
               id="org.daisy.pipeline.gui.action.cancelAll"
               label="%action.cancelAll"
               menubarPath="org.daisy.pipeline.gui.menu.run/run"
               style="push"
               tooltip="%action.cancelAll.tooltip"/>
         <action
               class="org.daisy.pipeline.gui.jobs.CancelAction"
               definitionId="org.daisy.pipeline.gui.command.cancel"
               enablesFor="+"
               icon="icons/action-stop.gif"
               id="org.daisy.pipeline.gui.action.cancel"
               label="%action.cancel"
               menubarPath="org.daisy.pipeline.gui.menu.run/run"
               style="push"
               tooltip="%action.cancel.tooltip">
            <enablement>
               <objectClass name="org.daisy.pipeline.gui.model.JobInfo"/>
            </enablement>
         </action>
         <action
               class="org.daisy.pipeline.gui.jobs.RunAllAction"
               definitionId="org.daisy.pipeline.gui.command.runAll"
               icon="icons/action-run-all.gif"
               id="org.daisy.pipeline.gui.action.runAll"
               label="%action.runAll"
               menubarPath="org.daisy.pipeline.gui.menu.run/run"
               style="push"
               tooltip="%action.runAll.tooltip"/>
         <action
               class="org.daisy.pipeline.gui.jobs.RunAction"
               definitionId="org.daisy.pipeline.gui.command.run"
               enablesFor="+"
               icon="icons/action-run.gif"
               id="org.daisy.pipeline.gui.action.run"
               label="%action.run"
               menubarPath="org.daisy.pipeline.gui.menu.run/run"
               style="push"
               tooltip="%action.run.tooltip">
            <enablement>
               <objectClass name="org.daisy.pipeline.gui.model.JobInfo"/>
            </enablement>
         </action>
         <action
               class="org.daisy.pipeline.gui.jobs.CancelPullDownAction"
               definitionId="org.daisy.pipeline.gui.command.cancelDropDown"
               enablesFor="+"
               icon="icons/action-stop.gif"
               id="org.daisy.pipeline.gui.action.cancelPullDown"
               label="%action.cancel"
               style="pulldown"
               toolbarPath="Normal/additions"
               tooltip="%action.cancel.tooltip">
            <enablement>
               <objectClass name="org.daisy.pipeline.gui.model.JobInfo"/>
            </enablement>
         </action>
         <action
               class="org.daisy.pipeline.gui.jobs.RunPullDownAction"
               definitionId="org.daisy.pipeline.gui.command.runDropDown"
               enablesFor="+"
               icon="icons/action-run.gif"
               id="org.daisy.pipeline.gui.action.runPullDown"
               label="%action.run"
               style="pulldown"
               toolbarPath="Normal/additions"
               tooltip="%action.run.tooltip">
            <enablement>
               <objectClass name="org.daisy.pipeline.gui.model.JobInfo"/>
            </enablement>
         </action>
         <action
               class="org.daisy.pipeline.gui.jobs.NewJobAction"
               definitionId="org.daisy.pipeline.gui.command.newItem"
               icon="icons/action-new-job.gif"
               id="org.daisy.pipeline.gui.action.newJob"
               label="%action.newJob"
               style="push"
               toolbarPath="org.eclipse.ui.workbench.file"
               tooltip="%action.newJob.tooltip"/>
      </actionSet>
      <actionSet
            description="%actionSet.navigation.description"
            id="org.daisy.pipeline.gui.actionSet.navigation"
            label="%actionSet.navigation"
            visible="true">
         <action
               allowLabelUpdate="true"
               definitionId="org.daisy.pipeline.gui.command.toggleBrowser"
               id="org.daisy.pipeline.gui.action.toggleBrowser"
               label="%action.toggleBrowser"
               menubarPath="window/navigation/additions"
               retarget="true"
               style="push"
               tooltip="%action.toggleBrowser.tooltip"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <scheme
            id="org.daisy.pipeline.gui.bindings.defaultScheme"
            name="%binding.scheme.default"/>
      <key
            commandId="org.eclipse.ui.file.close"
            sequence="M1+W"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.file.close"
            sequence="M1+F4"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.file.closeAll"
            sequence="M1+M2+W"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.file.closeAll"
            sequence="M1+M2+F4"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.paste"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            sequence="M1+V"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.selectAll"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            sequence="M1+A"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.undo"
            sequence="M1+Z"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.redo"
            sequence="M1+Y"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.copy"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            sequence="M1+C"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.cut"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            sequence="M1+X"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.edit.delete"
            sequence="DEL"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.newWizard"
            sequence="M1+M2+N"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.showSystemMenu"
            sequence="M3+-"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.showViewMenu"
            sequence="M1+F10"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.maximizePart"
            sequence="M1+M"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.nextView"
            sequence="M1+F7"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.previousView"
            sequence="M1+M2+F7"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.nextPerspective"
            sequence="M1+F8"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.previousPerspective"
            sequence="M1+M2+F8"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme" />
      <key
            commandId="org.eclipse.ui.window.preferences"
            platform="carbon"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+,"/>
      <key
            commandId="org.daisy.pipeline.gui.command.newItem"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+N"/>
      <key
            commandId="org.daisy.pipeline.gui.command.cancel"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+F2"/>
      <key
            commandId="org.daisy.pipeline.gui.command.cancelAll"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+M2+F2"/>
      <key
            commandId="org.daisy.pipeline.gui.command.clearFinished"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M2+DEL"/>
      <key
            commandId="org.daisy.pipeline.gui.command.moveDown"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+ARROW_DOWN">
      </key>
      <key
            commandId="org.daisy.pipeline.gui.command.moveToBottom"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+M2+ARROW_DOWN">
      </key>
      <key
            commandId="org.daisy.pipeline.gui.command.moveToTop"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+M2+ARROW_UP">
      </key>
      <key
            commandId="org.daisy.pipeline.gui.command.moveUp"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+ARROW_UP">
      </key>
      <key
            commandId="org.daisy.pipeline.gui.command.run"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+F1"/>
      <key
            commandId="org.daisy.pipeline.gui.command.runAll"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+M2+F1"/>
      <key
            commandId="org.daisy.pipeline.gui.command.toggleBrowser"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="F6"/>
      <key
            commandId="org.eclipse.ui.navigate.back"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+ARROW_LEFT"/>
      <key
            commandId="org.eclipse.ui.navigate.forward"
            schemeId="org.daisy.pipeline.gui.bindings.defaultScheme"
            sequence="M1+ARROW_RIGHT"/>
   </extension>
  
   <extension
