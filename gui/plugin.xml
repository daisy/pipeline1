   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <introProductBinding
            introId="org.daisy.pipeline.gui.intro"
            productId="org.daisy.pipeline.gui.product"/>
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            icon="icons/welcome.gif"
            id="org.daisy.pipeline.gui.intro"/>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="org.daisy.pipeline.gui.intro"
            content="intro/content.xml"
            id="org.daisy.pipeline.gui.intro.config">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
            <implementation kind="swt"/>
            <launchBar
                  computed="false"
                  location="fastview"/>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:help?after=additions">
         <command
               commandId="org.daisy.pipeline.gui.command.update">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.daisy.pipeline.gui.jobs.wizard.NewJobWizard"
            hasPages="true"
            icon="icons/action-new-job.gif"
            id="org.daisy.pipeline.gui.wizard.newJob"
            name="%wizard.newJob"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.daisy.pipeline.gui.JobsPerspective"
            icon="icons/pers-jobs.gif"
            id="org.daisy.pipeline.gui.perspectives.jobs"
            name="%perspective.jobs">
      </perspective>
      <perspective
            class="org.daisy.pipeline.gui.DocPerspective"
            icon="icons/persp-doc.gif"
            id="org.daisy.pipeline.gui.perspectives.doc"
            name="%perspective.documentation"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.ui.ExtensionFactory:appearancePreferencePage"
            id="org.daisy.pipeline.gui.prefPage.appearance"
            name="%prefPage.appearance"/>
      <page
            class="org.eclipse.ui.ExtensionFactory:newKeysPreferencePage"
            id="org.daisy.pipeline.gui.prefPage.keys"
            name="%prefPage.keys"/>
      <page
            class="org.daisy.pipeline.gui.PathsPrefPage"
            id="org.daisy.pipeline.gui.prefPage.paths"
            name="%prefPage.paths"/>
      <page
            class="org.eclipse.ui.ExtensionFactory:perspectivesPreferencePage"
            id="org.daisy.pipeline.gui.prefPage.perspectives"
