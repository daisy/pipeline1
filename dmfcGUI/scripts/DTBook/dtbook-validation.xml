<?xml version="1.0" encoding="UTF-8"?>
<taskScript version="1.0">
	<name>DTBook 2005 Validation</name>
	<description>Validates a DTBook 2005 document against the DTD and other schemas.</description>
	
	<property name="input" value="FIXME" type="application/x-dtbook+xml"/>	
	
	<!-- *************************
	      DTBook input validation 
	     ************************* -->
	<task name="int_daisy_validator" interactive="false">
		<parameter>
			<name>input</name>
			<value>${input}</value>
		</parameter>
		<parameter>
			<name>abortThreshold</name>
			<value>WARNING</value>
		</parameter>
	</task>
		
</taskScript>
