<?xml version="1.0" encoding="UTF-8"?>
<taskScript version="1.0">
	<name>Sentence detection</name>
	<description>Performs sentence detection on a DTBook 2005-1 document</description>
	
	<property name="input" value="FIXME" type="application/xml"/>
	<property name="outputPath" value="FIXME" type="application/xml"/>
	
	
	<task name="se_tpb_xmldetection" interactive="false">
		<parameter>
			<name>input</name>
			<value>${input}</value>
		</parameter>		
		<parameter id="abbr">
			<name>output</name>
			<value>${outputPath}</value>
		</parameter>		
		<parameter>
			<name>doAbbrAcronymDetection</name>
			<value>true</value>
		</parameter>		
		<parameter>
			<name>doSentenceDetection</name>
			<value>true</value>
		</parameter>		
		<parameter>
			<name>doWordDetection</name>
			<value>false</value>
		</parameter>
	</task>
	
</taskScript>
