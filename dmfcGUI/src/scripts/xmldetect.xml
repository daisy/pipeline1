<?xml version="1.0" encoding="UTF-8"?>
<taskScript version="1.0">
	<name>XML Abbr/Acronym/Sentence/Word Detection test</name>
	<description>This script runs the XML abbr, acronym, sentence and word detection</description>
	
	<task name="se_tpb_xmldetection" interactive="false">

		<parameter>
			<name>input</name>
			<value>d:/books/C53591_small.xml</value>
		</parameter>
		
		<parameter>
			<name>output</name>
			<value>h:/dmfc/word-sentence-detector/test-out.xml</value>
		</parameter>
		
		<parameter>
			<name>doAbbrAcronymDetection</name>
			<value>true</value>
		</parameter>
		
		<parameter>
			<name>doSentenceDetection</name>
			<value>true</value>
		</parameter>
		
		<parameter>
			<name>doWordDetection</name>
			<value>true</value>
		</parameter>

	</task>

</taskScript>
