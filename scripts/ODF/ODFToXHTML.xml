<?xml version="1.0" encoding="UTF-8"?>
<taskScript version="1.0">
	<name>ODF to XHTML</name>
	<description>Converts an Open Document Format text file to XHTML 1.0</description>
	
	<property name="input" value="FIXME" type="application/vnd.oasis.opendocument.text"/>
	<property name="outputPath" value="FIXME" type="application/xhtml+xml"/>
	
	
	<task name="uk_rnib_odf2dtbook" interactive="true">

		<parameter>
			<name>odf</name>
			<value>${input}</value>
		</parameter>

		<parameter id="id1">
			<name>dtbook</name>
			<value>${input}.tmp</value>
		</parameter>
		
	</task>
	
	<task name="uk_rnib_dtbook2xhtml" interactive="false">

		<parameter ref="id1">
			<name>xml</name>
			<value>${input}.tmp</value>
		</parameter>
					
		<parameter id="id2">
			<name>out</name>
			<value>${outputPath}</value>
		</parameter>		
				
	</task>

</taskScript>
