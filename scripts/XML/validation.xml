<?xml version="1.0" encoding="UTF-8"?>
<taskScript version="1.0">
	<name>Validation</name>
	<description>Validates a document against its DTD and possibly other schemas.</description>
	
	<property name="input" value="FIXME" type="application/anonymous"/>	
	
	<!-- *************************
	      Input validation 
	     ************************* -->
	<task name="int_daisy_validator" interactive="false">
		<parameter>
			<name>input</name>
			<value>${input}</value>
		</parameter>
		<parameter>
			<name>abortThreshold</name>
			<value>WARNING</value>
		</parameter>
	</task>
		
</taskScript>
